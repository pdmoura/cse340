<h1><%- title %></h1>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
<% } %>

<div id="update-wrapper">
    
    <div class="form-container">
        <form action="/account/update" method="POST">
            <h2>Account Update</h2>
            
            <div class="form-group">
                <label for="account_firstname">First Name</label>
                <input type="text" name="account_firstname" id="account_firstname" required 
                       value="<%= locals.account_firstname %>">
            </div>
            
            <div class="form-group">
                <label for="account_lastname">Last Name</label>
                <input type="text" name="account_lastname" id="account_lastname" required 
                       value="<%= locals.account_lastname %>">
            </div>
            
            <div class="form-group">
                <label for="account_email">Email</label>
                <input type="email" name="account_email" id="account_email" required 
                       value="<%= locals.account_email %>">
            </div>
            
            <input type="hidden" name="account_id" value="<%= locals.account_id %>">
            
            <button type="submit" class="account-btn" disabled>Update Account</button>
        </form>
    </div>
      
    <div class="form-container password-card">
        <form action="/account/update-password" method="POST">
            <h2>Change Password</h2>
            
            <div class="info-block">
                <p><strong>Note:</strong> Entering a password here will change your current password.</p>
            </div>

            <div class="form-group">
                <label for="account_password">New Password</label>
                <span class="password-rules">At least 12 characters, 1 capital, 1 number, 1 special character</span>
                <div class="password-wrapper">
                    <input type="password" name="account_password" id="account_password" required
                       pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
                    <button type="button" class="pswdBtn" id="pswdBtn" aria-label="Show password">
                        <svg class="show-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path><circle cx="12" cy="12" r="3"></circle></svg>
                        <svg class="hide-icon hidden" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19m-6.72-1.07a3 3 0 1 1-4.24-4.24"></path><line x1="1" y1="1" x2="23" y2="23"></line></svg>
                    </button>
                </div>
            </div>
            
            <input type="hidden" name="account_id" value="<%= locals.account_id %>">
            
            <button type="submit" class="account-btn admin-btn" disabled>Change Password</button>

        </form>
    </div>

</div>

  <script src="/js/inv-update.js"></script>
  <script src="/js/password-toggle.js"></script>