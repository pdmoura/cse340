<h1><%- title %></h1>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
<% } %>

<div id="update-wrapper">
    
    <div class="form-container">
        <form action="/account/update" method="POST">
            <h2>Account Update</h2>
            
            <div class="form-group">
                <label for="account_firstname">First Name</label>
                <input type="text" name="account_firstname" id="account_firstname" required 
                       value="<%= locals.account_firstname %>">
            </div>
            
            <div class="form-group">
                <label for="account_lastname">Last Name</label>
                <input type="text" name="account_lastname" id="account_lastname" required 
                       value="<%= locals.account_lastname %>">
            </div>
            
            <div class="form-group">
                <label for="account_email">Email</label>
                <input type="email" name="account_email" id="account_email" required 
                       value="<%= locals.account_email %>">
            </div>
            
            <input type="hidden" name="account_id" value="<%= locals.account_id %>">
            
            <button type="submit" class="account-btn" disabled>Update Account</button>
        </form>
    </div>
      
    <div class="form-container password-card">
        <form action="/account/update-password" method="POST">
            <h2>Change Password</h2>
            
            <div class="info-block">
                <p><strong>Note:</strong> Entering a password here will change your current password.</p>
            </div>

            <div class="form-group">
                <label for="account_password">New Password</label>
                <span class="password-rules">At least 12 characters, 1 capital, 1 number, 1 special character</span>
                <input type="password" name="account_password" id="account_password" required
                       pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
            </div>
            
            <input type="hidden" name="account_id" value="<%= locals.account_id %>">
            
            <button type="submit" class="account-btn admin-btn" disabled>Change Password</button>
        </form>
    </div>

</div>

  <script src="/js/inv-update.js"></script>