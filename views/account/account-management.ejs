<h1><%- title %></h1>
<%- messages() %>
<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
<% } %>

<% if (locals.accountData) { %>
  <div id="account-dashboard">
      
      <div class="management-card user-card">
          <h2 id="welcome-management">Welcome, <%= locals.accountData.account_firstname %>!</h2>
          <p>You are logged in.</p>
          <a href="/account/update/<%= locals.accountData.account_id %>" class="account-btn">Update Account Information</a>
      </div>

      <% if (locals.accountData.account_type === "Employee" || locals.accountData.account_type === "Admin") { %>
        <div class="management-card admin-card">
            <h2>Inventory Management</h2>
            <p>Manage vehicles, classifications, and stock.</p>
            <a href="/inv" class="account-btn admin-btn">Access Inventory Management</a>
        </div>
      <% } %>
      <div class="management-card user-card full-width-card">
          <h2>My Reviews</h2>
          
          <% if (locals.reviews && locals.reviews.length > 0) { %>
              <table id="inventoryDisplay"> <thead>
                      <tr>
                          <th>Vehicle</th>
                          <th>Date</th>
                          <th>Actions</th>
                      </tr>
                  </thead>
                  <tbody>
                      <% reviews.forEach(review => { %>
                          <tr>
                              <td><%= review.inv_make %> <%= review.inv_model %></td>
                              <td><%= new Date(review.review_date).toLocaleDateString() %></td>
                              <td>
                                  <a href="/review/edit/<%= review.review_id %>" title="Edit">Edit</a> | 
                                  <a href="/review/delete/<%= review.review_id %>" title="Delete">Delete</a>
                              </td>
                          </tr>
                      <% }) %>
                  </tbody>
              </table>
          <% } else { %>
              <p>You haven't written any reviews yet.</p>
          <% } %>
      </div>
  </div>
<% } %>