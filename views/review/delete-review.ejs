<h1><%- title %></h1>
<%- messages() %>
<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
<% } %>

<div id="delete-inventory-form-container"> <p class="warning">Are you sure you want to delete this review? This cannot be undone.</p>
    
    <form action="/review/delete" method="POST">
        <div class="form-group">
            <label>Review Date:</label>
            <input type="text" readonly value="<%= new Date(review_date).toLocaleDateString() %>">
        </div>

        <div class="form-group">
            <label>Review Text:</label>
            <textarea readonly rows="5"><%= review_text %></textarea>
        </div>

        <input type="hidden" name="review_id" value="<%= review_id %>">
        
        <button type="submit">Delete Review</button>
        <a href="/account/" class="cancel-link">Cancel</a>
    </form>
</div>