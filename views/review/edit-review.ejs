<h1><%- title %></h1>
<%- messages() %>
<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
<% } %>

<div class="form-container">
    <form action="/review/update" method="POST">
        <div class="form-group">
            <label>Review Date:</label>
            <input type="text" readonly value="<%= new Date(review_date).toLocaleDateString() %>">
        </div>

        <div class="form-group">
            <label for="review_text">Review Text:</label>
            <textarea name="review_text" id="review_text" required minlength="5" rows="5"><%= review_text %></textarea>
        </div>

        <input type="hidden" name="review_id" value="<%= review_id %>">
        <button type="submit" class="account-btn" disabled>Update Review</button>
    </form>
</div>

  <script src="/js/inv-update.js"></script>
